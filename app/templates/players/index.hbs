<div>
    <h3 style="float: left;">PLAYERS LIST, <LinkTo @route="players.create">Create new player</LinkTo>
    </h3>
</div>

<label>
    <span>
        Filter field
    </span>

    <Input id="filterField" @value={{this.field}} />
</label>

<label>
    <span>
        Filter field
    </span>

    <Input id="filterValue" @value={{this.value}} />
    <button {{on "click" this.updateFilter}}>Filter</button>
</label>

<Players::List
    @players={{model}}
    @onHeaderClick={{this.onHeaderClick}}
    @updateLimit={{this.updateLimit}}
    @sortDirection={{this.sortDirection}}
    @limit={{this.limit}} />

Pages
{{#each this.pageArray as |index|}}
    <button {{on "click" (fn this.onPageClick index)}}>{{index}}</button>
{{/each}}
